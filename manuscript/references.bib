@article{hoffmannLassaVirusPersistence2024,
  title = {Lassa Virus Persistence with High Viral Titers Following Experimental Infection in Its Natural Reservoir Host, {{Mastomys}} Natalensis},
  author = {Hoffmann, Chris and Krasemann, Susanne and Wurr, Stephanie and Hartmann, Kristin and Adam, Elisa and Bockholt, Sabrina and M{\"u}ller, Jonas and G{\"u}nther, Stephan and Oestereich, Lisa},
