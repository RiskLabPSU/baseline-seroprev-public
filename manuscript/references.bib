  author = {Arruda, Li{\~a} B{\'a}rbara and Free, Hayley Beth and Simons, David and Ansumana, Rashid and Elton, Linzy and Haider, Najmul and Honeyborne, Isobella and Asogun, Danny and McHugh, Timothy D and Ntoumi, Francine and Zumla, Alimuddin and Kock, Richard},
  year = {2023},
