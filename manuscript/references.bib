@article{marienSerosurveillanceIdentifiesEndemic2025a,
  title = {Serosurveillance {{Identifies}} an {{Endemic Hotspot}} of {{Lassa Fever}} in {{Faranah}}, {{Upper Guinea}}},
  author = {Mariën, Joachim and Nuismer, Scott L and Magassouba, N’Faly and Soropogui, Barré and Günther, Stephan and Becker-Ziaja, Beate and Gabriel, Martin and Müller-Kräuter, Helena and Strecker, Thomas and Saez, Almudena Mari and Borchert, Matthias and Fichet-Calvet, Elisabeth},
  date = {2025-06-13},
  journaltitle = {The Journal of Infectious Diseases},
