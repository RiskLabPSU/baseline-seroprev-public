@article{kenmoeSystematicReviewMetaanalysis2020a,
  title = {Systematic Review and Meta-Analysis of the Epidemiology of {{Lassa}} Virus in Humans, Rodents and Other Mammals in Sub-{{Saharan Africa}}},
