@article{reddingEnvironmentalmechanisticModellingImpact2016,
  title = {Environmental-Mechanistic Modelling of the Impact of Global Change on Human Zoonotic Disease Emergence: A Case Study of {{Lassa}} Fever},
  shorttitle = {Environmental-Mechanistic Modelling of the Impact of Global Change on Human Zoonotic Disease Emergence},
  author = {Redding, David W. and Moses, Lina M. and Cunningham, Andrew A. and Wood, James and Jones, Kate E.},
